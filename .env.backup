# Database Configuration
DATABASE_URL=sqlite:///mystic_echo.db

# Flask Configuration
SESSION_SECRET=your-super-secret-session-key-here

# Replit Authentication (Required)
REPL_ID=your-replit-id-here
ISSUER_URL=https://replit.com/oidc

# OpenAI API (Required for AI features and TTS)
OPENAI_API_KEY=your-openai-api-key-here

# Wasabi/S3 Storage (Optional - for cloud backups)
WASABI_ACCESS_KEY=your-wasabi-access-key
WASABI_SECRET_KEY=your-wasabi-secret-key
WASABI_BUCKET=mystic-echo-audiobooks
WASABI_REGION=us-east-1
WASABI_ENDPOINT=https://s3.wasabisys.com

# SendGrid Email (Optional - for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_SENDER_EMAIL=noreply@yourdomain.com

# Application URL (Optional)
APP_BASE_URL=http://localhost:5000
